@model SmartWatering.Models.Control

@{
    ViewData["Title"] = "Control";
}

    <h1 class="text-info">Control</h1>

<hr />

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow mb-4  ">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Set range value</h6>
                </div>
                <div class="card-body">
                    <div class="row ">
                        <form asp-action="Control" class="col-12 justify-content-center">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group row justify-content-center">
                                <label asp-for="Device" class="control-label col-4"></label>
                                <select asp-for="Device" id="Device" onchange="updatePin()" class="form-control col-5">
                                </select>
                                <span asp-validation-for="Device" class="text-danger"></span>
                            </div>
                            <div class="form-group row justify-content-center">
                                <label asp-for="PIN" class="control-label col-4"></label>
                                <select asp-for="PIN" id="Pin" class="form-control col-5"></select>
                                <span asp-validation-for="PIN" class="text-danger"></span>
                            </div>
                            <div class="form-group row justify-content-center">
                                <label asp-for="Status" class="control-label col-4 border border-0"></label>
                                <select asp-for="Status" class="form-control col-5">
                                    <option selected value="0">OFF</option>
                                    <option value="1">ON</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                            <div class="form-group row justify-content-center">
                                <input type="submit" onclick="Noti('Schedule task', 'success')" value="Submit" class="btn btn-primary btn-icon-split btn-lg  col-3 " />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/control.js"></script>
<script src="~/js/toatr.js"></script>

